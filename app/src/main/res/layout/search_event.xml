<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/white_border"
        android:id="@+id/relLayout1">


        <AutoCompleteTextView
            android:id="@+id/input_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="#000"
            android:background="@null"
            android:hint="@string/enter_event_places"
            android:imeOptions="actionSearch"
            android:singleLine="true" android:layout_marginEnd="90dp" android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/iwSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/ic_magnify"
            tools:ignore="RtlHardcoded"
            android:contentDescription="@string/todo" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iwMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="18dp"
        android:background="@drawable/ic_gps" />


</LinearLayout>