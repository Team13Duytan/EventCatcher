<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="me.linhthengo.androiddddarchitechture.presentation.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="me.linhthengo.androiddddarchitechture.presentation.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="me.linhthengo.androiddddarchitechture.presentation.auth.SignInFragment"
        android:label="SignInFragment">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="me.linhthengo.androiddddarchitechture.presentation.auth.SignUpFragment"
        android:label="SignUpFragment" />
</navigation>